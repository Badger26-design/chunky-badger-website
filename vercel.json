    "version": 2,
    "builds": [
        {
            "src": "*.{html,css,js}",
            "use": "@vercel/static"
        },
        {
            "src": "Pictures/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "api/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/subscribe",
            "dest": "/api/subscribe.js"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}